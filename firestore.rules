rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /boards/{boardId} {
      allow create: if request.auth != null
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.users.hasAny([request.auth.uid]);
      allow read, delete: if request.auth != null
        && resource.data.users != null
        && resource.data.users.hasAny([request.auth.uid]);
      allow update: if request.auth != null
        && request.resource.data.users != null
        && (
          (resource.data.users != null && resource.data.users.hasAny([request.auth.uid]))
          || (resource.data.users != null
              && request.resource.data.users.hasAll(resource.data.users)
              && request.resource.data.users.hasAny([request.auth.uid])
              && request.resource.data.users.size() == resource.data.users.size() + 1)
        );
      match /presence/{userId} {
        allow read, write: if request.auth != null
          && get(/databases/$(database)/documents/boards/$(boardId)).data.users.hasAny([request.auth.uid]);
      }
    }
  }
}
